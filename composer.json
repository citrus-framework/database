{
  "name": "citrus-framework/database",
  "description": "php database access library",
  "keywords": ["citrus", "php", "library", "database"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "take64",
      "email": "take64@citrus.tk"
    }
  ],
  "require": {
    "citrus-framework/configure": "^1.0",
    "citrus-framework/exception": "^1.0",
    "citrus-framework/variables": "^1.0",
    "ext-pdo": "*"
  },
  "require-dev": {
    "php": "^8.1",
    "phpunit/phpunit": "^9.5",
    "nunomaduro/phpinsights": "^v2.0"
  },
  "autoload": {
    "psr-4": {
      "Citrus\\": "src/",
      "Test\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
